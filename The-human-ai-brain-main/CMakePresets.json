{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build configuration",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "ON",
        "BUILD_GRPC_SERVER": "ON",
        "ENABLE_OPENMP": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with all checks",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Optimized release build",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "asan",
      "displayName": "AddressSanitizer",
      "description": "Debug build with AddressSanitizer",
      "inherits": "debug",
      "cacheVariables": {
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "tsan",
      "displayName": "ThreadSanitizer",
      "description": "Debug build with ThreadSanitizer",
      "inherits": "debug",
      "cacheVariables": {
        "ENABLE_TSAN": "ON"
      }
    },
    {
      "name": "ubsan",
      "displayName": "UBSanitizer",
      "description": "Debug build with UndefinedBehaviorSanitizer",
      "inherits": "debug",
      "cacheVariables": {
        "ENABLE_UBSAN": "ON"
      }
    },
    {
      "name": "ci",
      "displayName": "CI Build",
      "description": "Configuration for CI/CD pipelines",
      "inherits": "release",
      "cacheVariables": {
        "BUILD_TESTS": "ON",
        "BUILD_GRPC_SERVER": "ON"
      }
    },
    {
      "name": "minimal",
      "displayName": "Minimal Build",
      "description": "Minimal build without optional components",
      "inherits": "default",
      "cacheVariables": {
        "BUILD_TESTS": "OFF",
        "BUILD_GRPC_SERVER": "OFF",
        "ENABLE_OPENMP": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "ci",
      "configurePreset": "ci",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "verbose",
      "configurePreset": "default",
      "output": {
        "verbosity": "verbose"
      }
    }
  ]
}
